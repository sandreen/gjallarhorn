<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AudioRecordingActivity" android:id="@+id/AudioRecordLayer" android:background="#1F2D3D">

    <Button
            android:id="@+id/pushButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="156dp"
            android:layout_marginEnd="92dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="155dp"
            android:text="@string/rec_play_button"
            android:textColor="#E3E3E3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/record_button"/>

    <TextView
            android:id="@+id/textView"
            android:layout_width="322dp"
            android:layout_height="62dp"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="@string/record_description"
            android:textColor="#E3E3E3"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/pushButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.482"/>

    <Button
            android:text="@string/rerecord_button"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:id="@+id/rerecordButton"
            android:onClick="resetMedia"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/pushButton"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/pushButton"/>
    <Button
            android:text="@string/save_button"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:id="@+id/saveButton"
            android:onClick="saveMedia"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/pushButton"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/pushButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>